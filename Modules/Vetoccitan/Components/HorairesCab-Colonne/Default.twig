<div class="bloc-Horaires">
	<div class="titreCentre">Horaires</div>
	{{  Lundi }}
	{% if Horaires.Lundi %}
		<div class="row bloc-infos">
			<div class="col-lg-3 col-md-3 col-sm-3 jours">Lundi :</div>
			<div class="col-lg-9 col-md-9 col-sm-9">  {{ Horaires.Lundi }}</div>
		</div>
	{% endif %}
	{% if Horaires.Mardi %}
		<div class="row bloc-infos">
			<div class="col-lg-3 col-md-3 col-sm-3 jours">Mardi :</div>
			<div class="col-lg-9 col-md-9 col-sm-9">  {{  Horaires.Mardi }}</div>
		</div>
	{% endif %}

	{% if Horaires.Mercredi %}
		<div class="row bloc-infos">
			<div class="col-lg-3 col-md-3 col-sm-3 jours">Mercredi :</div>
			<div class="col-lg-9 col-md-9 col-sm-9">  {{  Horaires.Mercredi }}</div>
		</div>
	{% endif %}

	{% if Horaires.Jeudi %}
		<div class="row bloc-infos">
			<div class="col-lg-3 col-md-3 col-sm-3 jours">Jeudi :</div>
			<div class="col-lg-9 col-md-9 col-sm-9">  {{  Horaires.Jeudi }}</div>
		</div>
	{% endif %}

	{% if Horaires.Vendredi %}
		<div class="row bloc-infos">
			<div class="col-lg-3 col-md-3 col-sm-3 jours">Vendredi :</div>
			<div class="col-lg-9 col-md-9 col-sm-9">  {{  Horaires.Vendredi }}</div>
		</div>
	{% endif %}
	{% if Horaires.Samedi %}
		<div class="row bloc-infos">
			<div class="col-lg-3 col-md-3 col-sm-3 jours">Samedi :</div>
			<div class="col-lg-9 col-md-9 col-sm-9">  {{  Horaires.Samedi }}</div>
		</div>
	{% endif %}
	{% if Horaires.Dimanche %}
		<div class="row bloc-infos">
			<div class="col-lg-3 col-md-3 col-sm-3 jours">Dimanche :</div>
			<div class="col-lg-9 col-md-9 col-sm-9">  {{  Horaires.Dimanche }}</div>
		</div>
	{% endif %}
	<div class="boutonCentre">
		{% if Adherent.LienReservation %}
			<a href="/{{ Adherent.LienReservation }}"  >Prendre rendez-vous</a>
		{% else %}
			<a href="/contact"  >Prendre rendez-vous</a>
		{% endif %}
	</div>
</div>
