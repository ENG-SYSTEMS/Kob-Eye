<style>
    #code{{ bloc.Code }}:after {
        background: {{ bloc.Couleur }};
        position: absolute;
        content:"";
        top:0;
        left:0;
        width:100%;
        height:100%;
        opacity:0.5;
        background-blend-mode: difference;
    }
</style>
<div class="home-link">
    <div style="background-image: url(/{{ bloc.Image }});" class="home-link" id="code{{ bloc.Code }}"></div>
    <a  href="{{ bloc.Lien }}"    {% if bloc.Externe == 1 %} target="_blank"  {%  endif %}>
        <i class="fas fa-{{ bloc.Icone }} fa-6x"></i>
        <span>{{ bloc.Titre }}</span>
    </a>
</div>
