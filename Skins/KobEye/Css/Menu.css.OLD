#Menu{
	width:100%;
/* 	height:44px; */
	/*background-color:#8F8F8F;*/
	background-image:url(/Skins/Gabarit1/Img/FondMenu.jpg);
	font-family:Georgia,Arial,Verdana,Helvetica,sans-serif;
}

#Menu ul{
	width:980px;
	margin:auto;
	font-family:Georgia,Arial,Verdana,Helvetica,sans-serif;
}

#Menu li{
	display:block;
	float:left;
	width:108px;
	/*border-right:1px solid #fff;*/
	background:url(/Skins/Gabarit1/Img/SeparationMenu.jpg) no-repeat right 0;
	font-family:Georgia,Arial,Verdana,Helvetica,sans-serif;
	margin:0;
	padding:0;
}

#Menu li a, #Menu li a:visited{
/*	font-weight:bold;*/
	padding-top:8px;
	padding-right:5px;
	text-align:center;
	display:block;
	height:37px;
/*	line-height:35px;*/
	text-decoration:none;
	color:#fff;
	font-family:Georgia,Arial,Verdana,Helvetica,sans-serif;
}

#Menu li a.Actif, #Menu li a:hover, #Menu li a:visited.Actif{
	/*background-color:#fff;*/
	color:#C9B785;
	text-decoration:none;
	font-family:Georgia,Arial,Verdana,Helvetica,sans-serif;
	background:url(/Skins/Gabarit1/Img/FlecheMenu.png) 50% bottom no-repeat;
	height:37px;
}