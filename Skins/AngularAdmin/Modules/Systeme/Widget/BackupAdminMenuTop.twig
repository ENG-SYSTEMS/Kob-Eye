            <div class="dropdown-divider"></div>
            <div id="remoteErrors">
                <div class="dropdown-header">Job(s) Remote en cours:</div>
                <a class="dropdown-item" ng-repeat="jb in store.data['TopMenuRun'] | filter:isRemote() as results3" href="#/{{ Urls.Activity }}/{[{ jb.id }]}" title="{[{ jb.Details }}">
