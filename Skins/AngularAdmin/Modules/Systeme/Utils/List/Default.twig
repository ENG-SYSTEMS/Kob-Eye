        </tr>
    </tbody>
    </table>
    <script type="text/javascript">
        $(document).ready(function(){
            var ok = 0;
            var tmp = 0;
            var interval = setInterval(function(){
                tmp++;
                ok++;
                $('.inverted th').each(function(){
                    var h = $(this).parent('tr').height();
                    if($(this).css('height') != h+'px') {
                        ok =0;
                        $(this).css('height', h);
                    }
                });
                if(ok >= 20 || tmp >= 100) clearInterval(interval);
            },25);

        });

    </script>
