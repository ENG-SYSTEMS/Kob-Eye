{
    "id":"{{ row.Id }}",
    "label": "{{ row.label }}"
    {% for field in fields %}
        {% if field.type == "boolean" %}
            ,"{{ field.name }}": {{ attribute(row,field.name) ? 1:0  }}
        {% elseif field.type == "fkey" and field.card=='short' %}
            ,"{{ field.name }}": {{ attribute(row,field.name) }}
            ,"{{ field.name }}label": "{{ attribute(row,field.name~'label') }}"
        {% else %}
            ,"{{ field.name }}": "{{ attribute(row,field.name) }}"
        {% endif %}
    {% endfor %}
}