{# fiche info personnelles Adherent #}
{% from "Skins/AngularAdmin/Modules/Cadref/Default/form_components.twig" import label,flabel,finput,flinput,fvalues,fquery,fdate,ftext,fboolean %} 
{% set f=fields %}
{% set o='obj' %}
<div class="page-content-inner">
    <h3>Informations personnelles</h3>
    <!-- Default Panel -->
    <section class="panel">
        <div class="panel-body cadref-panel-body">
            <div class="row no-gutters">
                <div class="col-md-12">
					<div class="row">
						<div class="col-md-7" >
							<div class="row">
								<div class="col-md-2">
									{{ label("Numéro") }}
								</div>
								<div class="col-md-2">
									{{ finput(f.Numero, o, true, '', 'width:80px') }}
								</div>
							</div>
							{{ flinput(f.Nom, o, false, '', 'text-transform:uppercase;', true) }}
							{{ flinput(f.Prenom, o) }}
							{{ flinput(f.Adresse1, o) }}
							{{ flinput(f.Adresse2, o) }}
							<div class="row">
								<div class="col-md-2">
									{{ label("CP Ville") }}
								</div>
								<div class="col-md-2">
									{{ finput(f.CP, o, false, 'ddddd') }}
								</div>
								<div class="col-md-8">
									{{ finput(f.Ville, o, false, '', 'text-transform:uppercase;', true) }}
								</div>
							</div>
							<div class="row" style="height:10px"></div>
							<div class="row">
								<div class="col-md-2">
									{{ label("Téléphones") }}
								</div>
								<div class="col-md-10">
									<div class="row">
										<div class="col-md-6">
											{{ finput(f.Telephone1, o, false, 'dd.dd.dd.dd.dd') }}
										</div>
										<div class="col-md-6">
											{{ finput(f.Telephone2, o, false, 'dd.dd.dd.dd.dd') }}
										</div>
									</div>
								</div>
							</div>
							{{ flinput(f.Mail, o) }}
							<div class="row" style="height:10px"></div>
							<div class="row">
								<div class="col-md-4">
									<div class="row">
										<div class="col-md-5">
											{{ label("Année de Naissance") }}
										</div>
										<div class="col-md-7">
											{{ finput(f.Naissance, o) }}
										</div>
									</div>
								</div>
								<div class="col-md-4">
									<div class="row">
										<div class="col-md-5">
											{{ label("Sexe") }}
										</div>
										<div class="col-md-7">
											{{ fvalues(f.Sexe, o) }}
										</div>
									</div>
								</div>
								<div class="col-md-4">
									<div class="row">
										<div class="col-md-5">
											{{ label("Certificat médical") }}
										</div>
										<div class="col-md-7">
											<input type="text" ng-if="!obj.certifInvalide" class="form-control cadref-input" ng-model="obj.Certificat" readonly/>
											<input type="text" ng-if="obj.certifInvalide" class="form-control cadref-input cadref-highlight" ng-model="obj.Certificat" 
												   title="Certificat médical absent ou obsolète" onmouseenter="$(this).tooltip('show')"readonly/>
										</div>
									</div>
								</div>
							</div>
							<div class="row">
								<div class="col-md-4">
									<div class="row">
										<div class="col-md-5">
											{{ label("Situation") }}
										</div>
										<div class="col-md-7">
											{{ fquery(f.SituationId, o) }}
										</div>
									</div>
								</div>
								<div class="col-md-4">
									<div class="row">
										<div class="col-md-5">
											{{ label("Profession") }}
										</div>
										<div class="col-md-7">
											{{ fquery(f.ProfessionId, o) }}
										</div>
									</div>
								</div>
							</div>
							<div class="row">
								<div class="col-md-4">
									<div class="row">
										<div class="col-md-5">
											<label class="form-control-label cadref-label" style="line-height:1">Connaissance de {{ UTL }}</label>
										</div>
										<div class="col-md-7">
											{{ fvalues(f.Origine, o) }}
										</div>
									</div>
								</div>
								<div class="col-md-4">
									<div class="row">
										<div class="col-md-5">
											{{ label("Année d'inscription") }}
										</div>
										<div class="col-md-7">
											{{ finput(f.Inscription, o, true) }}
										</div>
									</div>
								</div>
								<div class="col-md-4">
									<div class="row">
										<div class="col-md-5">
											{{ label("Dernière inscription") }}
										</div>
										<div class="col-md-7">
											{{ finput(f.Annee, o, true) }}
										</div>
									</div>
								</div>
							</div>
							<div class="row" style="height:10px"></div>
							<div class="row">
								<div class="col-md-4">
									<button type="button" class="btn btn-success margin-inline cadref-btn-100" ng-click="{{ identifier }}InfoSave()">Enregistrer les modifications</button>
								</div>
							</div>
						</div>
						{# block right #}                    
						<div class="col-md-5">
							{{ include(template_from_string(module('Cadref/AccesPublic/utilisateur'))) }}
						</div>
					</div>
				</div>
			</div>
		</div>
    </section>
</div>
