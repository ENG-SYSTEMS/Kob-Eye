<div class="page-content-inner">
    <!-- Profile Header -->
    <nav class="top-submenu top-submenu-with-background">
        <div class="profile-header">
            <div class="profile-header-info">
                <div class="row">
                    <div class="col-xl-12">
                        <div class="width-100 text-center pull-right hidden-md-down">
                            <h2>{{ EsxCount }}</h2>
                            <p>ESXi</p>
                        </div>
                        <div class="width-100 text-center pull-right hidden-md-down">
                            <h2>{{ EsxVmCount }}</h2>
                            <p>Machines virtuelles</p>
                        </div>
                        <div class="profile-header-title">
                            <h2>{% if User.Nom or User.Prenom %} {{ User.Prenom }} {{ User.Nom }} {% else %} John Doe {% endif %}<small>@{{ User.Login }}</small></h2>
                            <p><i class="icmn-quill3"></i> {{ User.Mail }}</p>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </nav>
    <!-- End Profile Header -->

    <!-- Profile -->
    <div class="row">
        <div class="col-xl-12">
            <section class="panel profile-user-content">
                <div class="panel-body">
                    <div class="form-group padding-top-10 margin-bottom-0">
                        <h2>Réinitialisation</h2>
                        <blockquote>Cette fonctionnalités vous permet de réinitialiser aux valeurs d'usines l'ensemble des valeurs, historiques et encore configurations de votre abtel Backup. Toutes les données seront perdues.</blockquote>
                        <button class="btn btn-primary width-200 margin-top-10" ng-click="resetData()">
                            <i class="fa fa-delete margin-right-5"></i>
                            Réinitialiser
                        </button>
                    </div>
                </div>
            </section>
        </div>
    </div>
    <!-- End Profile -->

</div>
