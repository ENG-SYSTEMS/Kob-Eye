{# fiche printAttestation #}
{% from "Skins/AngularAdmin/Modules/Cadref/Default/form_components.twig" import label,flabel,finput,flinput,fvalues,fquery,fdate,ftext,fboolean %} 
<div class="page-content-inner">
    <section class="panel">
        <div class="panel-heading" style="padding-bottom:10px; padding-top:10px">
			<div>
				<span class="cadref-ins-numero" ng-bind="obj.Numero"></span> <span class="cadref-ins-nom" ng-bind="obj.Nom|uppercase"></span> <span class="cadref-ins-prenom" ng-bind="obj.Prenom"></span>
			</div>
        </div>
        <div class="row" style="height:20px"></div>
		<div class="panel-body">
            <div class="row">
                <div class="col-xl-12">
                    <div class="panel panel-with-borders m-b-0">
                        <div class="panel-body cadref-no-padding">
							<div class="row">
								<div class="col-xl-8">
									<div class="row">
										<div class="col-md-2">
											{{ label("Année de cotisation") }}
										</div>
										<div class="col-md-3">
											<select class="form-control cadref-input" ng-model="Attest.AttestAnnee" ng-change="selectAttestAnnee(obj)" ng-init="Attest.AttestAnnee='{{ attestFirst }}';selectAttestAnnee(obj);">
												{% for k,v in attestAnnees %}
													<option value="{{ k }}">{{ v }}</option>
												{% endfor %}
											</select>
										</div>
									</div>
									<div class="row" style="height:10px"></div>
									<div class="row">
										<div class="col-md-2">
											{{ label("Attestation fiscale") }}
										</div>
										<div class="col-md-2">
											<switch ng-model="Attest.AttestFisc" ng-change="selectAttestMode(0)"></switch>
										</div>
									</div>
									<div class="row" style="height:10px"></div>
									<div class="row">
										<div class="col-md-2">
											{{ label("Suivi de cours") }}
										</div>
										<div class="col-md-2">
											<switch ng-model="Attest.AttestSuivi" ng-change="selectAttestMode(1)"></switch>
										</div>
									</div>
									<div class="row" style="height:10px"></div>
									<div class="row">
										<div class="col-md-2">
											{{ label("Année fiscale") }}
										</div>
										<div class="col-md-2">
											<select class="form-control cadref-input" ng-model="Attest.AttestFiscale" ng-options="label for label in obj.fiscales">
											</select>
										</div>
									</div>
									<div class="row" style="height:10px"></div>
										<div class="col-md-2">
										</div>
										<div class="col-md-2">
											<button type="button" class="btn ng-scope btn-success margin-inline cadref-btn-100" ng-if="CadrefAdherentfunction.callNext" ng-click="Attest.mode='print'; CadrefAdherentcallFunction(CadrefAdherentfunction.callNext.item,CadrefAdherentfunction.callNext.nom,CadrefAdherentfunction.callNext.title,CadrefAdherentfunction.callNext.needConfirm,1)">Imprimer</button>
										</div>
										<div class="col-md-2">
											<button type="button" class="btn ng-scope btn-primary margin-inline cadref-btn-100" ng-disabled="obj.Mail==''" ng-if="CadrefAdherentfunction.callNext" ng-click="Attest.mode='mail'; CadrefAdherentcallFunction(CadrefAdherentfunction.callNext.item,CadrefAdherentfunction.callNext.nom,CadrefAdherentfunction.callNext.title,CadrefAdherentfunction.callNext.needConfirm,1)">Message</button>
										</div>
									</div>
								</div>                            
							</div>
						</div>
					</div>
				</div>
			</div>
    </section>
</div>
<input type="hidden" ng-init="CadrefAdherentfunction.args.Attest=Attest"/>

