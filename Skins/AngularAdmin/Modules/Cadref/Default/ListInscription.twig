<table class="table table-hover nowrap straight" id="{{ identifier }}-table" width="100%" style="line-height:1" >
    <thead>
        <tr>
            <th title="Id" class="list-col-th-id" hidden>ID</th>
			<th>Classe</th>
            <th>Libellé</th>
            <th>Horaires</th>
            <th>Cycle</th>
            <th>Prix</th>
            <th>Réduc</th>
            <th>Réduc</th>
            <th>Places</th>
			<th>Etat</th>
            <th>Date</th>
			<th>U</th>
			{% if tempContext %}
			<th>Actions</th>
			{% endif %}
        </tr>
    </thead>
    <tbody>
		<tr dir-paginate="item in {{ identifier }}{% if tempContext %}.store.data.temp{% else %}.data{% endif %}">
			<td class="list-col-td-id" hidden>{[{ item.id }]}</td>
			<td scope="row" class="cadref-td typevarchar"><span class="label">{[{ item.CodeClasse }]}</span></td>
			<td scope="row" class="cadref-td typevarchar"><span class="label">{[{ item.LibelleD+' '+item.LibelleN }]}</span></td>
			<td scope="row" class="cadref-td typevarchar"><span class="label">{[{ item.Jour | limitTo : 3 }]}&nbsp;{[{ item.HeureDebut }]}&nbsp;-&nbsp;{[{ item.HeureFin }]}</span></td>
			<td scope="row" class="cadref-td typevarchar"><span class="label">{[{ item.CycleDebut }]}&nbsp;-&nbsp;{[{ item.CycleFin }]}</span></td>
			<td scope="row" class="cadref-td typefloat"><span class="label">{[{ item.Prix{% if public %}+Number(item.Reduction1)+Number(item.Reduction2){% endif %} }]}</span></td>
			<td scope="row" class="cadref-td typefloat">
				{% if tempContext %}
					<input type="text" class="form-control cadref-input-diff" ng-model="item.Reduction1" ng-change="classeReductionChange(item)" mask="dddd" style="max-width:60px"/>
				{% else %}
					<span class="label">{[{ item.Reduction1 }]}</span>
				{% endif %}
			</td>
			<td scope="row" class="cadref-td typefloat">
				{% if tempContext %}
					<input type="text" class="form-control cadref-input-diff" ng-model="item.Reduction2" ng-change="classeReductionChange(item)" mask="dddd" style="max-width:60px"/>
				{% else %}
					<span class="label">{[{ item.Reduction2 }]}</span>
				{% endif %}				
			</td>
			<td scope="row" class="cadref-td typevarchar"><span class="label">{[{ item.Inscrits+'/'+item.Places+'/'+item.Attentes }]}</span></td>
			<td scope="row" class="cadref-td typevarchar">
				<span class="label label-info" ng-if="item.Attente>0 && item.Supprime==0">Attente</span>
				<span class="label label-success" ng-if="item.Attente==0 && item.Supprime==0">Inscrit</span>
				<span class="label label-danger" ng-if="item.Supprime==1">Supprimé</span>
				<span class="label label-warning" ng-if="item.Supprime==2" style="background-color:orange">Echangé</span>
			</td>
			<td scope="row" class="cadref-td typedate">
				<span class="label" ng-if="item.Supprime>0">{[{ item.DateSupprime }]}</span>
				<span class="label" ng-if="item.Attente>0 && item.Supprime==0">{[{ item.DateAttente | limitTo : 16 }]}</span>
				<span class="label" ng-if="item.Attente==0 && item.Supprime==0">{[{ item.DateInscription | limitTo : 11 }]}</span>
			</td>
			<td scope="row" class="cadref-td typevarchar"><span class="label">{[{ item.Utilisateur }]}</span></td>
			{% if tempContext %}
				<td  class="table-action cadref-td-btn">
					<div  style="width:120px">
						<a class="btn-abt cadref-btn-add btn-success" href="javascript: void(0);" ng-click="classeInscrire(item)" title="Inscrire" ng-if="item.Supprime>0 || item.Attente>0"></a>
						<a class="btn-abt cadref-btn-wait btn-primary" href="javascript: void(0);" ng-click="classeAttente(item)" title="Attente" ng-if="item.Supprime==0 && item.Attente==0"></a>
						<a class="btn-abt cadref-btn-change btn-warning" href="javascript: void(0);" ng-click="classeSupprime(item,2)" title="Echanger" ng-if="item.id>0 && item.Supprime==0 && item.Attente==0"></a>
						<a class="btn-abt cadref-btn-del btn-danger" href="javascript: void(0);" ng-click="classeSupprime(item,1)" title="Supprimer" ng-if="item.Supprime==0"></a>
					</div>
				</td>
			{% endif %}
		</tr>
    </tbody>
</table>
