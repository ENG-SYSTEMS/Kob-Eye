<div class="page-content-inner">
    <ul class="list-unstyled breadcrumb">
        <li>
            <a href="#/TableauDeBord">Tableau de bord</a>
        </li>
        <li>
            <a href="#/{{ CurrentMenu.Url }}">Liste des {{ ObjectClass.getDescription() }}s</a>
        </li>
        <li>
            <a href="javascript: void(0);">{{ ObjectClass.getDescription() }} {[{ obj.label }]}</a>
        </li>
    </ul>

    <!-- Default Panel -->
    <section class="panel">
        <div class="panel-heading">
            <div class="pull-right">
                <button type="button" class="btn btn-default btn-danger margin-inline" data-toggle="modal" data-target="#example1">
                    Modifier
                </button>
            </div>
            <h3>{[{ obj.label }]}</h3>
        </div>
        <div class="panel-body">
            <div class="row">
                <div class="col-md-6">
                    {% for field in fichefields %}
                        <div class="row">
                            <div class="col-md-6">
                                <label class="form-control-label" for="l0">{{ field.description }}</label>
                            </div>
                            <div class="col-md-6">
                                {% if field.type == "price" or field.type == "float" %}
                                    <span class="label label-warning">{[{ obj.{{ field.name }} }]}</span>
                                {% elseif field.type == "extlink" %}
                                    <a class="btn btn-success btn-xs" href="https://zabbix.abtel.fr:8443/guacamole/#/client/{[{ obj.{{ field.name }} }]}" target="_blank">{{ field.listDescr }}</a>
                                {% elseif field.type == "int" %}
                                    <span class="label label-primary">{[{ obj.{{ field.name }} }]}</span>
                                {% elseif field.type == "boolean" %}
                                    <span class="label label-success" ng-if="obj.{{ field.name }}"><i class="fa fa-check"></i></span>
                                    <span class="label label-danger" ng-if="!obj.{{ field.name }}"><i class="fa fa-times"></i></span>
                                {% else %}
                                    {[{ obj.{{ field.name }} }]}
                                {% endif %}
                            </div>
                        </div>
                        {% if loop.index - loop.revindex0 == 1 or loop.index - loop.revindex0 == 0 %}
                    </div>
                    <div class="col-md-6">
                        {% endif %}
                    {% endfor %}
                </div>
            </div>
        </div>
    </section>
    <!-- End Default Panel -->
    <div class="nav-tabs-horizontal">
        <ul class="nav nav-tabs" role="tablist">
            {% for child in ChildrenElements %}
            <li class="nav-item">
                <a class="nav-link {% if loop.first %}active{% endif %}" href="javascript: void(0);" data-toggle="tab" data-target="#tab{{ child.objectName }}" role="tab">{{ child.objectDescription }}</a>
            </li>
            {% endfor %}
        </ul>
        <div class="tab-content">
            {% for child in ChildrenElements %}
            <div class="tab-pane {% if loop.first %}active{% endif %}" id="tab{{ child.objectName }}" role="tabpanel">
                {% if child.recursive %}
                    {{ include(template_from_string(module(Query~'/Tree'))) }}
                {% else %}
                    <section class="panel">
                        <div class="panel-body">
                            <ng-include src="'/{{ CurrentObj.Module }}/{{ CurrentObj.ObjectType }}/'+obj.id+'/{{ child.objectName }}/List.htm'" ng-if="show"></ng-include>
                        </div>
                    </section>
                    <!-- End Default Panel -->
                {% endif %}
            </div>
            {% endfor %}
        </div>
    </div>

</div>


